<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2>@Model.ItemName</h2>
        </div>
        <div class="panel-body">
            <h4>Mesurement Unit :@Model.MesurementUnti</h4>
            <h4>In Stock Now :@Model.InStock</h4>

            <div class="btn-group">
                @if (Model.ItemName?.Count() == 0)
                {
                    <a class="btn btn-default" asp-area="">View Item list</a>
                }
                else
                {
                    //<a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="ItemList">View Item list</a>
                    <a class="btn btn-info" asp-area="" asp-controller="Orders" asp-action="Show" asp-route-id="@Model.ItemId">View Orders</a>
                }
                <a class="btn btn-success" asp-area="" asp-controller="Items" asp-action="Edit" asp-route-id="@Model.ItemId">Edit</a>
                <a class="btn btn-danger" asp-area="" asp-controller="Items" asp-action="Delete" asp-route-id="@Model.ItemId">Delete</a>
                    <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Show" asp-route-id="@Model.ItemId">View Purchase</a>
            </div>
        </div>
    </div>
</div>