@model IEnumerable<VendorToCustomer.Models.Search>

@{
    ViewData["Title"] = "SearchResult";
}

<h2>Search Result</h2>

<table class="table table-striped table-bordered table-hover" style="background-color:bisque">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                Date of Purchase
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                Price Per Unit
            </th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfPurchase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerUnit)
                </td>
                @{var total = item.PricePerUnit * item.Quantity; }
                <td> @Html.DisplayFor(modelItem => total)</td>
                @*<td>
                        <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
