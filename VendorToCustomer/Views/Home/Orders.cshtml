@model ReflectionIT.Mvc.Paging.PagingList<VendorToCustomer.Models.OrdersNew>

@{
    ViewData["Title"] = "Orders";

}

@*<nav aria-label="NewsFeed navigation example">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>*@



<h2>Orders Transaction</h2>

<table class="table table-striped table-bordered table-hover" style="background-color:bisque">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
             Item
            </th>
            <th>
                Date of Purchase
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                Price Per Unit
            </th>
            <th>Total Amount</th>
            @*   <th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfPurchase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerUnit)
                </td>
                @{var total = item.PricePerUnit * item.Quantity; }
                <td> @Html.DisplayFor(modelItem => total)</td>
                @*<td>
                        <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
<nav aria-label="NewsFeed navigation example">
    <vc:pager paging-list="@Model" />
</nav>

<p>
    <a asp-action="Index" class=" btn btn-info">Back to Home Page</a>
    <a asp-action="AddOrder" class=" btn btn-info">Add Orders</a>
</p>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}