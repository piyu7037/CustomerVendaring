@model VendorToCustomer.Models.Purchase

@{
    ViewData["Title"] = "AddPurchase";
}

<h2>Add to Purchase</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPurchase">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label">Item Name</label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VendorsId" class="control-label">Vendor Name</label>
                <select asp-for="VendorsId" class="form-control" asp-items="ViewBag.VendorsId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="DateOfPurchase" class="control-label">Date Of Purchase</label>
                    <input asp-for="DateOfPurchase" class="form-control" />
                    <span asp-validation-for="DateOfPurchase" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />

                <a asp-action="Purchase" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
