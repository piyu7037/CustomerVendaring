@model VendorToCustomer.Models.Items

@{
    ViewData["Title"] = "AddItem";
}


<h2>Add Items</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddItem" onsubmit="submitSuccess">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ItemName" class="control-label">Item Name</label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MesurementUnti" class="control-label">Mesurement Unit</label>
                <input asp-for="MesurementUnti" class="form-control" />
                <span asp-validation-for="MesurementUnti" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
                <a asp-action="ItemList" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

<script>
    function submitSuccess() {
        alert("Form submitted successfully");
    }
</script>
@section Scripts {
   
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
